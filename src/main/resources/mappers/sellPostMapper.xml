<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.reviewcow.sellpost.dao.SellPostMapper">
 	<insert id="selectSellPost" parameterType="com.reviewcow.sellpost.model.SellPostUploadForm">
 		INSERT INTO `sell_post`
 		(	
			`memberId`
			,`serviceCategory1`
			,`serviceCategory2Online`
			,`serviceCategory2Offline`
			,`productName`
			,`numberOfApplicants`
			,`salesMethod`
			,`startDate`
			,`endDate`
			,`productDescriptions`
			,`thumbnailImgPath`
			,`productUrl`
			,`sellPrice`
			,`discountRate`
			,`storeName`
			,`storeAddress`
			,`scriptFees`
			,`corpsFile`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{memberId}
			,#{serviceCategory1}
			,#{serviceCategory2Online}
			,#{serviceCategory2Offline}
			,#{productName}
			,#{numberOfApplicants}
			,#{salesMethod}
			,#{startDate}
			,#{endDate}
			,#{productDescriptions}
			,#{thumbnailImgPath}
			,#{productUrl}
			,#{sellPrice}
			,#{discountRate}
			,#{storeName}
			,#{storeAddress}
			,#{scriptFees}
			,#{corpsFile}
			,NOW()
			,NOW()
		)
 	</insert>
 	
 	<select id="selectSellPostListOrderByDeadlineForOnline" resultType="com.reviewcow.sellpost.model.SellPost">
 		SELECT 
	 		`id`
			,`memberId`
			,`serviceCategory1`
			,`serviceCategory2Online`
			,`serviceCategory2Offline`
			,`productName`
			,`numberOfApplicants`
			,`salesMethod`
			,`startDate`
			,`endDate`
			,`productDescriptions`
			,`thumbnailImgPath`
			,`productUrl`
			,`sellPrice`
			,`discountRate`
			,`storeName`
			,`storeAddress`
			,`scriptFees`
			,`corpsFile`
			,`nowApplicants`
			,`aprovalCondition`
			,`cancelBySeller`
			,`createdAt`
			,`updatedAt`
		FROM
			`sell_post`
		WHERE `serviceCategory1` = 'onlineProduct'
		AND TIMESTAMPDIFF(DAY, now(), `endDate`) >= 0
		ORDER BY TIMESTAMPDIFF(DAY, `startDate`, `endDate`)
		LIMIT 8;
 	</select>
 	 
 	 <select id="selectSellPostListForHotItem" resultType="com.reviewcow.sellpost.model.SellPost">
 		SELECT A.*
		FROM `sell_post` AS A
		LEFT JOIN `apply_product` AS B
		ON A.id = B.sellPostId
		WHERE A.`serviceCategory1` = 'onlineProduct'
		AND TIMESTAMPDIFF(DAY, now(), A.`endDate`) >= 0
		GROUP BY B.`sellPostId`
		ORDER BY count(B.`sellPostId`) DESC
		LIMIT 8;
 	</select>
 	
 	<select id="selectSellPostbyPostId" resultType="com.reviewcow.sellpost.model.SellPost">
 		SELECT 
	 		`id`
			,`memberId`
			,`serviceCategory1`
			,`serviceCategory2Online`
			,`serviceCategory2Offline`
			,`productName`
			,`numberOfApplicants`
			,`salesMethod`
			,`startDate`
			,`endDate`
			,`productDescriptions`
			,`thumbnailImgPath`
			,`productUrl`
			,`sellPrice`
			,`discountRate`
			,`storeName`
			,`storeAddress`
			,`scriptFees`
			,`corpsFile`
			,`nowApplicants`
			,`aprovalCondition`
			,`cancelBySeller`
			,`createdAt`
			,`updatedAt`
		FROM
			`sell_post`
		WHERE
			`id` = #{postId}			
 	</select>
 
 </mapper>